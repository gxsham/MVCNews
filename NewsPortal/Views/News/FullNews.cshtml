@model NewsPortal.ViewModels.FullNewsViewModel

@{
	ViewBag.Title = "FullNews";
}



<div id="main">
	
	<article class="post">
		<header>
			<div class="title">
				<h2><a href="#">@Html.DisplayFor(x => Model.Topic)</a></h2>
			</div>
			<div class="meta">
				<time class="published" datetime="2015-11-01">@Html.DisplayFor(x => Model.CreationDate)</time>
				<a class="author"><img src="~/images/avatar.jpg" alt="" /></a>
				@Html.ActionLink(Model.AuthorUserName, "Details", "Authors", new { id = Model.AuthorId }, null)
			</div>
		</header>
		<a href="#" class="image featured"><img src=@(new HtmlString(Model.ImageLink)) /></a>
		<p>@(new HtmlString(Model.Text))</p>
		<footer>
			<ul class="stats">
				<li>@Html.ActionLink(Model.Category.ToString(), "Filter", "Home", new { category = Model.Category }, null)</li>
				<li><a href="#" class="icon fa-heart">@Html.DisplayFor(x => Model.Rating)</a></li>
				<li><a href="#" class="icon fa-comment">@Html.DisplayFor(x=>Model.Comments.Count)</a></li>
			</ul>
		</footer>

		
	</article>

	<article class="post">
		<header>
			<div class="title">
				<h2>Comments</h2>
			</div>
		</header>
		@foreach (var item in Model.Comments)
		{
			<hr/>
			<h4>@Html.DisplayFor(x=>item.Author.UserName)</h4>
			<blockquote>@Html.DisplayFor(x=>item.Text)</blockquote>
		}
	</article>
</div>