@model IEnumerable<NewsPortal.Models.News>

@{
    ViewBag.Title = "Home Page";
}



<div class="jumbotron">
    <h1>News Portal</h1>
</div>

<link href="~/Content/css/codepen.min.css" rel="stylesheet">
<style>
    #navlist li {
        display: inline;
        list-style-type: none;
        padding-right: 20px;
        font-family: Consolas;
    }
</style>


<div class="container">
    @foreach (var item in Model)
    {
        <div class="col-lg-12">
            <div class="well">
                <div class="mce-content-body">
                    <h3>@Html.DisplayFor(modelITem => item.Topic)</h3>
                    <div>
                        <ul id="navlist">
                            <li>@Html.ActionLink($"{item.MailId}", "About", "Home")</li>
                            <li><a href="#">@Html.DisplayFor(modelITem => item.Category)</a></li>
                            <li><small>@Html.DisplayFor(modelITem => item.CreationDate)</small></li>
                        </ul>
                    </div>
                   
                    <img class="thumbnail" src=@(new HtmlString(item.ImageLink)) >
                    @(new HtmlString(item.Text))
                    
                </div>
            </div>
        </div>
    }

</div>
